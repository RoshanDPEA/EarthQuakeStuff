<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    Slider
        id: speed_slider_1
        center_y: root.height * 0.3
        min: 50
        max: 6400
        step: 50
        orientation: "horizontal"
        text: "position"
        sensitivity: 'handle'

    Label:
        size: 50, 50
        id: speed_sliderPosition
        x: root.width * -.45
        y: root.height * -.40
        text: str(speed_slider_1.value)
        color: .5, .25, .25, 1

    Slider
        id: speed_slider_2
        center_y: root.height * -0.3
        min: 50
        max: 6400
        step: 50
        orientation: "horizontal"
        text: "position"
        sensitivity: 'handle'

    Label:
        size: 50, 50
        id: speed_sliderPosition
        x: root.width * -.45
        y: root.height * -.40
        text: str(speed_slider_2.value)
        color: .5, .25, .25, 1

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.75
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .3, .4, .5, 1
        text: "move"
        on_press: root.move(1)

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "soft_stop"
        on_press: root.soft_stop(1)

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.25
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "direction change"
        on_press: root.change_direction(1)

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .3, .4, .5, 1
        text: "move_2"
        on_press: root.move(2)

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.75
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "soft_stop_2"
        on_press: root.soft_stop(2)

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.25
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "direction change 2"
        on_press: root.change_direction(2)

        DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .3, .4, .5, 1
        text: "move_both"
        on_press: root.move(3)

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .3, .4, .5, 1
        text: "move_both"
        on_press: root.move(3)

    DPEAButton:
        # Quit button
        size: 50, 50
        center_x: root.width * 0.99
        center_y: root.height * 0.01
        background_color: 0,0,0,0
        color: 0, 0, 0, 1
        text: ""
        on_press: root.exit_program()
